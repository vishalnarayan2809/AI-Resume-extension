{
  "manifest_version": 3,
  "name": "AI Presume",
  "version": "1.0.0",
  "description": "Scrape job descriptions, merge with your profile, and generate a tailored HTML resume via AI.",
  "icons": {
    "16": "icons/ai-presume-16.png",
    "32": "icons/ai-presume-32.png",
    "48": "icons/ai-presume-48.png",
    "128": "icons/ai-presume-128.png"
  },
  "action": {
    "default_title": "AI Presume",
    "default_icon": {
      "16": "icons/ai-presume-16.png",
      "32": "icons/ai-presume-32.png",
      "48": "icons/ai-presume-48.png",
      "128": "icons/ai-presume-128.png"
    },
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
